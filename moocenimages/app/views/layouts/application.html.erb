    <%= csrf_meta_tags %>
  </head>
  <body>
    <%= render 'layouts/navigation' %>

    <main role="main">
      <div class="container">
        <div class="row">
          <p class="notice">
          </p>
        </div>
      </div>
      <div class="container">
        <div class="content">
           <div class="row">
            <div class="col-lg-12 col-md-12">
              <%= yield %>
            </div>
          </div>
          <div class="footer">
            <%= render 'layouts/footer' %>
          </div>
        </div>
      </div>
    </main>
  </body>
</html>