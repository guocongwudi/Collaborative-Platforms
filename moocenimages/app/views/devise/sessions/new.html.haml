.login-box
  .login-title
    %h2 Login to MOOCviz
  .login-form
    = form_for resource, :as => resource_name, :html => {:class => "form-horizontal", :role => 'form'}, :url => session_path(resource_name) do |form|
      .form-group
        %label.col-sm-4.control-label{:for => 'username'} Username
        .col-sm-8
          = form.text_field :username, :placeholder => 'username', :id => 'username', :class => "form-control"

      .form-group
        %label.col-sm-4.control-label{:for => 'password'} Password
        .col-sm-8
          = form.password_field :password, :placeholder => 'password', :id => 'password', :class => "form-control"

      - if devise_mapping.rememberable?
        .remember_me
          = form.check_box :remember_me
          = form.label :remember_me

      .form-group
        .col-sm-offset-3.col-sm-9
          = form.submit 'Login', :class => "btn btn-success"

    = render 'devise/shared/links'